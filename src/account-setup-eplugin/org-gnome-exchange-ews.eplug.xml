<?xml version="1.0" encoding="UTF-8"?>
<e-plugin-list>
	<e-plugin type="shlib" location="@PLUGINDIR@/liborg-gnome-exchange-ews.so" load-on-startup="true" id="org.gnome.evolution.plugin.exchange-ews" name="Exchange Web Services" system_plugin="true">

		<author name="Foo" email="foo@bar"/>

		<description>Exchange Web Services Plugin</description>

		<hook class="org.gnome.evolution.mail.config:1.0">
			<group 
				target="account" 
				id="org.gnome.evolution.mail.config.accountWizard" 
				check="org_gnome_exchange_ews_check_options">
				<item 
					type="item_table" 
					path="10.receive/20.config/30.ews" 
					factory="org_gnome_exchange_ews_account_setup"/>
			</group>
		</hook>
		<hook class="org.gnome.evolution.mail.config:1.0">
			<group 
				target="account" 
				id="org.gnome.evolution.mail.config.accountAssistant" 
				check="org_gnome_exchange_ews_check_options">
				<item 
					type="item_table" 
					path="10.receive/20.config/30.ews" 
					factory="org_gnome_exchange_ews_account_setup"/>
			</group>
		</hook>
		<hook class="org.gnome.evolution.mail.config:1.0">
			<group 
				target="account" 
				id="org.gnome.evolution.mail.config.accountEditor" 
				check="org_gnome_exchange_ews_check_options">
				<item 
					type="item_table" 
					path="10.receive/20.config/30.ews" 
					factory="org_gnome_exchange_ews_account_setup"/>
			</group>
		</hook>
		<hook class="org.gnome.evolution.addressbook.config:1.0">
			<group 
				target="source" 
				id="com.novell.evolution.addressbook.config.accountEditor" 
				check="exchange_ews_book_check" 
				commit="exchange_ews_book_commit">
				<item 
					type="item" 
					path="00.general/10.display/50.createcontacts" 
					factory="exchange_ews_create_addressbook"/>
			</group>
		</hook>
		<hook class="org.gnome.evolution.calendar.config:1.0">
			<group 
				target="source" 
				id="org.gnome.evolution.calendar.calendarProperties" 
				check="exchange_ews_cal_check" 
				commit="exchange_ews_cal_commit">
				<item 
					type="item_table" 
					path="00.general/10.source/40.pcalendar" 
					factory="exchange_ews_create_calendar"/>
			</group>
		</hook>

	</e-plugin>
</e-plugin-list>
